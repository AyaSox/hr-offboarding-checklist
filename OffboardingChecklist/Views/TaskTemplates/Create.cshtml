@model OffboardingChecklist.Models.TaskTemplate

@{
    ViewData["Title"] = "Add Task Template";
}

<div class="card">
    <div class="card-header">
        <h2 class="mb-0">
            <i class="fas fa-tasks text-primary"></i>
            Add Task Template
        </h2>
    </div>
    <div class="card-body">
        <form asp-action="Create" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="col-md-6">
                <label asp-for="TaskName" class="form-label"></label>
                <input asp-for="TaskName" class="form-control" />
                <span asp-validation-for="TaskName" class="text-danger"></span>
            </div>
            
            <div class="col-md-6">
                <label asp-for="Department" class="form-label"></label>
                <select asp-for="Department" class="form-select" asp-items="ViewBag.Departments">
                    <option value="">Select Department</option>
                </select>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            
            <div class="col-md-6">
                <label asp-for="DaysFromLastWorkingDay" class="form-label"></label>
                <input asp-for="DaysFromLastWorkingDay" class="form-control" type="number" />
                <div class="form-text">0 = on last day, negative = days before, positive = days after</div>
                <span asp-validation-for="DaysFromLastWorkingDay" class="text-danger"></span>
            </div>
            
            <div class="col-md-6">
                <label asp-for="DependsOnTemplateId" class="form-label"></label>
                <select asp-for="DependsOnTemplateId" class="form-select" asp-items="ViewBag.Templates">
                </select>
                <span asp-validation-for="DependsOnTemplateId" class="text-danger"></span>
            </div>
            
            <div class="col-12">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="col-12">
                <div class="form-check">
                    <input asp-for="IsRequired" class="form-check-input" />
                    <label asp-for="IsRequired" class="form-check-label"></label>
                </div>
            </div>
            
            <div class="col-12">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Save Template
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}